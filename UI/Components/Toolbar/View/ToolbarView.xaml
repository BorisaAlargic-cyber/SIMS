<UserControl x:Class="UI.Components.Toolbar.View.ToolbarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UI.Components.Toolbar.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <DockPanel LastChildFill="True">
        <ToolBarTray DockPanel.Dock="Bottom">
            <ToolBar Height="50" HorizontalAlignment="Left" VerticalAlignment="Center">
                <Button Content="User" Command="{Binding UserCommand}" Visibility="{Binding IsUserVisible}"></Button>
                <Button Content="Drug" Command="{Binding DrugCommand}" Visibility="{Binding IsDrugVisible}"></Button>
                <Button Content="Recepie" Command="{Binding RecepieCommand}"  Visibility="{Binding IsRecepieVisible}"></Button>
                <Button Content="Receit" Command="{Binding ReceitCommand}" Visibility="{Binding IsRecepVisible}"></Button>
                <Button Content="Help" Command="{Binding HelpCommand}"></Button>
            </ToolBar> 
        </ToolBarTray>
    </DockPanel>
</UserControl>

 